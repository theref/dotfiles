execute pathogen#infect()
filetype plugin indent on
syntax on

set backspace=indent,eol,start
set ignorecase
set smartcase

map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>

set nobackup
set nowritebackup
set noswapfile
