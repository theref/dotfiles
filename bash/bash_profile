PS1='$(user_host) $(get_pwd) $(git_color) $(git_branch) $(condaenv)
â†’ '
export PS1


function get_pwd() {
  echo "${BOLD}${YELLOW}${PWD/$HOME/~}${RESET}"
}

function user_host() {
  if [[ -n $SSH_CONNECTION ]]; then
    me="${BOLD}${BLUE}%n@%m${RESET}"
  else
    me=""
  fi
  echo $me
}


function condaenv() {
  echo "${BOLD}${MAGENTA}$CONDA_DEFAULT_ENV${RESET}"
}


function git_color() {
  if [[ "$(git status 2> /dev/null)" =~ "nothing to commit" ]]; then
    echo "${GREEN}"
  else
    echo "${RED}"
  fi
}


function git_branch() {
  local git_status="$(git status 2> /dev/null)"
  local on_branch="On branch ([^${IFS}]*)"
  local on_commit="HEAD detached at ([^${IFS}]*)"

  if [[ $git_status =~ $on_branch ]]; then
    local branch=${BASH_REMATCH[1]}
    echo "($branch) ${RESET}"
  elif [[ $git_status =~ $on_commit ]]; then
    local commit=${BASH_REMATCH[1]}
    echo "($commit) ${RESET}"
  fi
}


